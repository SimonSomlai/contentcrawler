<%= render "shared/header_dark" %>
<div id="content">
    <div class="section nobg full-screen nopadding nomargin">
      <div class="container clearfix">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default divcenter noradius noborder">
              <div class="panel-body">
                <h2>Sign up</h2>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "login-form", class: "nobottommargin"}) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="col_full">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, class: "form-control not-dark" %>
                  </div>
                  <div class="col_full">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control not-dark" %>
                  </div>
                  <div class="col_full">
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control not-dark" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "Sign up", id: "login-form-submit", class: "button button-3d button-black nomargin" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
